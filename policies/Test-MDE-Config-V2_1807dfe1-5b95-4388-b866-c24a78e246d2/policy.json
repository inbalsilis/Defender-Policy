{
 "properties": {
  "displayName": "Test-MDE-Config-V2",
  "policyType": "Custom",
  "mode": "All",
  "description": "Test MD Config on Linux machine",
  "metadata": {
   "category": "MDE",
   "createdBy": "97f029e3-1d12-4964-87db-1c0c8c15bf9b",
   "createdOn": "2022-12-18T14:23:51.8305516Z",
   "updatedBy": "97f029e3-1d12-4964-87db-1c0c8c15bf9b",
   "updatedOn": "2022-12-19T09:28:17.4677731Z"
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effect",
     "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
     "DeployIfNotExists",
     "AuditIfNotExists",
     "Disabled"
    ],
    "defaultValue": "DeployIfNotExists"
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.HybridCompute/machines"
     },
     {
      "field": "Microsoft.HybridCompute/machines/osName",
      "like": "linux*"
     },
     {
      "field": "Microsoft.HybridCompute/machines/osSku",
      "notContains": "openshift"
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]",
    "details": {
     "roleDefinitionIds": [
      "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
     ],
     "type": "Microsoft.HybridCompute/machines/extensions",
     "name": "mde-config-app",
     "existenceCondition": {
      "allOf": [
       {
        "field": "Microsoft.HybridCompute/machines/extensions/publisher",
        "equals": "Microsoft.Azure.Extensions"
       },
       {
        "field": "Microsoft.HybridCompute/machines/extensions/type",
        "equals": "CustomScript"
       },
       {
        "field": "Microsoft.HybridCompute/machines/extensions/provisioningState",
        "equals": "Succeeded"
       }
      ]
     },
     "deployment": {
      "properties": {
       "mode": "incremental",
       "parameters": {
        "vmName": {
         "value": "[field('name')]"
        },
        "location": {
         "value": "[field('location')]"
        },
        "azureResourceId": {
         "value": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.HybridCompute/machines/',field('name'))]"
        }
       },
       "template": {
        "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
        "contentVersion": "1.0.0.0",
        "parameters": {
         "vmName": {
          "type": "string"
         },
         "location": {
          "type": "string"
         },
         "azureResourceId": {
          "type": "string"
         }
        },
        "resources": [
         {
          "name": "[concat(parameters('vmName'), '/mde-config-app')]",
          "type": "Microsoft.HybridCompute/machines/extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2022-05-10-preview",
          "properties": {
           "publisher": "Microsoft.Azure.Extensions",
           "type": "CustomScript",
           "typeHandlerVersion": "2.1",
           "autoUpgradeMinorVersion": true,
           "settings": {},
           "protectedSettings": {
            "fileUris": [
             "https://storagermdelinux.blob.core.windows.net/avpolicy/mdatp_managed.json"
            ],
            "commandToExecute": "sudo cp \"mdatp_managed.json\" \"/etc/opt/microsoft/mdatp/managed/mdatp_managed.json\"",
            "managedIdentity": {}
           }
          }
         }
        ]
       }
      }
     }
    }
   }
  }
 },
 "id": "/subscriptions/36c4b3fa-c1d3-4d9c-b114-81b3fd8e4371/providers/Microsoft.Authorization/policyDefinitions/1807dfe1-5b95-4388-b866-c24a78e246d2",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "1807dfe1-5b95-4388-b866-c24a78e246d2"
}